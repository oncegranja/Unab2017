@{
    ViewBag.Title = "ListaClasificacionRiesgo";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                <div class="row">
                    <div class="col col-xs-6">
                        <h3 class="panel-title">Listado - Clasificación de Riesgo</h3>
                    </div>
                    <div class="col col-xs-12 text-right">
                        <button type="button" id="AddClaRie" class="btn btn-success" data-toggle="modal" data-target="#Agrega_ClaRie"><i class="glyphicon glyphicon-plus"></i>  Agregar</button>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <table id="List_Cla_Rie" class="table table-striped table-bordered display" cellspacing="0" style="width:100%">
                    <thead>
                        <tr>
                            <th>Codigo Riesgo</th>
                            <th>Descripción</th>
                            <th>Porcentaje</th>
                            <th>Estado</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<br />
<br />
<br />


<!-- Modal -->
<div class="modal fade" id="Agrega_ClaRie" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog box-shadow--16dp" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">INGRESO CLASIFICACION DE RIESGO @ViewBag.titulo </h4>
            </div>
            <div class="modal-body" id="vista"></div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="EditaClaRie" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel1">EDITAR CLASIFICACION DE RIESGO </h4>
            </div>
            <div class="modal-body" id="vista2"></div>
        </div>
    </div>
</div>