

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                <div class="row">
                    <div class="col col-xs-6">
                        <h3 class="panel-title">Listado - Catástrofes</h3>
                    </div>
                    <div class="col col-xs-12 text-right">
                        <button type="button" id="AddCtf" class="btn btn-success" data-toggle="modal" data-target="#agregacatastrofe"><i class="glyphicon glyphicon-plus"></i>  Agregar</button>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <table id="lista_catastrofe" class="table table-striped table-bordered display" cellspacing="0" style="width:100%">
                    <thead>
                        <tr>
                            <th>Codigo Catástrofe</th>
                            <th>Descripción</th>
                            <th>N° Acuerdo CEC</th>
                            <th>Estado</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<br />
<br />
<br />

<!-- Modal -->
<div class="modal fade" id="agregacatastrofe" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog box-shadow--16dp" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">INGRESO CATASTROFE @ViewBag.titulo </h4>
            </div>
            <div class="modal-body" id="vista"></div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="EditCatastrofe" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel1">EDITAR TIPO DE CATASTROFE </h4>
            </div>
            <div class="modal-body" id="vista2"></div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="DeleteCatastrofe" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel1">BORRAR CATASTROFE </h4>
            </div>
            <div class="modal-body" id="vista3"></div>
        </div>
    </div>
</div>