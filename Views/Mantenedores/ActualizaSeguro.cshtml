@using (Html.BeginForm("InsertaSeguros", "Mantenedores", FormMethod.Post, new { @id = "Form_sol", @name = "Form_sol" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.Label("CODIGO SEGURO", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                @Html.Editor("Seg_Ref_Cod", new { htmlAttributes = new { @class = "form-control Seg_Ref_Cod", @required = "required", @value = Cod_Seg } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("DESCRIPCION", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                @Html.Editor("Seg_Ref_Des", new { htmlAttributes = new { @class = "form-control Seg_Ref_Des", @required = "required" } })
                @Html.Editor("Seg_Ref_Id", new { htmlAttributes = new { @class = "form-control Seg_Ref_Id", @required = "required", @Value = "0", @style = "display: none" } })
                @Html.Editor("Seg_Ref_Est", new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.estadoctf, @style = "display: none" } })
            </div>
        </div>

        
        <div class="modal-footer">
            <div class="col-md-offset-2 col-md-10">
                <button type="button" data-dismiss="modal" class="btn btn-default">CERRAR </button>
                <input type="submit" value="ACTUALIZAR" class="btn btn-primary" />
            </div>
        </div>
    </div>
}