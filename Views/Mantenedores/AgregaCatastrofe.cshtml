@model Garantia_4.Models.TGSC_REL_CTF_COM

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    <div class="panel-heading">AGREGA LOCALIDADES A CATÁSTROFES</div>
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.Label("Catástrofe", new { @class = "control-label col-md-1" })
                            <div class="col-md-2">
                                @Html.DropDownList("M_Catastrofe", null, htmlAttributes: new { @class = "form-control" })
                                @*@Html.ValidationMessageFor(model => model.Sol_Nom_Loc, "", new { @class = "text-danger" })*@
                            </div>
                            <div class="col-md-1">
                                <button type="button" id="AddCtfLoc" class="btn btn-xs btn-primary glyphicon glyphicon-plus" data-toggle="modal" data-target="#agregacatastrofe"></button>
                            </div>

                            @Html.Label("Región", new { @class = "control-label col-md-1" })
                            <div class="col-md-3">
                                @Html.DropDownList("M_Regiones", null, "Selecciones Región", htmlAttributes: new { @class = "form-control" })
                                @*@Html.ValidationMessageFor(model => model.Sol_Nom_Loc, "", new { @class = "text-danger" })*@
                            </div>
                            @Html.Label("Localización", new { @class = "control-label col-md-1" })
                            <div class="col-md-3">
                                @Html.DropDownList("M_Comuna", null, "Seleccione Localización", htmlAttributes: new { @class = "form-control" })
                                @*@Html.ValidationMessageFor(model => model.Rel_Ctf_Com_Id, "", new { @class = "text-danger" })*@
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-1 col-lg-offset-10">
                                <button type="button" class="btn btn-primary btn-sm" id="agrega_catastrofe">AGREGAR CATASTROFE</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    <div class="panel-heading">LOCALIDADES INGRESADAS A CATÁSTROFES</div>
                    <div class="panel-body">
                        <table id="add_catastrofes" class="table table-striped table-bordered display" cellspacing="0" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Catástrofe</th>
                                    <th>Región</th>
                                    <th>Comuna</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="agregacatastrofe" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">AGREGA TIPO DE CATASTROFE</h4>
            </div>
            <div class="modal-body" id="vista"></div>
          </div>
     </div>
</div>


<div class="modal fade" id="EditaCtfLoc" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel1">ELIMINA CATASTROFE </h4>
            </div>
            <div class="modal-body" id="vista2"></div>
        </div>
    </div>
</div>