@{ var estados = @Request.QueryString["estadoCtf"];
 var idCtf = @Request.QueryString["idCtf"];
}

@using (Html.BeginForm("EditaCatastrofe2", "Mantenedores", FormMethod.Post, new { @id = "Form_sol", @name = "Form_sol" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("CATASTROFE", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                @Html.Editor("Catastrofe", new { htmlAttributes = new { @class = "form-control Ctf_Cod", @readonly = "readonly" } })
                @Html.Editor("Cod_Ctf", new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Cod_Ctf, @style = "display: none" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("REGIÓN", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                @Html.Editor("Region", new { htmlAttributes = new { @class = "form-control Region", @readonly = "readonly" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("LOCALIDAD", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                @Html.Editor("Comuna", new { htmlAttributes = new { @class = "form-control Comuna", @readonly = "readonly" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("OBSERVACIONES", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-8" style="background-color:#ff8500">
                @Html.Label((string)@ViewBag.Observaciones, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>


        <div class="modal-footer">
            <div class="col-md-offset-2 col-md-10">
                <button type="button" data-dismiss="modal" class="btn btn-default">CERRAR </button>
                @if (@ViewBag.TotalReg == 1)
                {
                    <input type="submit" value="ACTUALIZA" class="btn btn-primary" />
                }
                else
                {
                    <input type="submit" value="ELIMINAR" class="btn btn-primary" />
                }
            </div>
        </div>
    </div>
}


