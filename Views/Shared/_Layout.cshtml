                                    <li><a href="@Url.Content("~/GeneraArchivos/Generacion")">Generación Archivos</a></li>
                                </ul>
                            </li>
                        }

                    </ul>
                    @if ((int)Session["perfil"] == 1 || (int)Session["perfil"] == 3)
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
