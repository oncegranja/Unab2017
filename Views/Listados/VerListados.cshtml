@{ var estados = @Request.QueryString["estado"]; }

@if (estados == "1")
{
    ViewBag.titulo = "DETALLE SOLICITUDES RECIBIDAS";
}
else if (estados == "2")
{
    ViewBag.titulo = "SOLICITUDES ANULADAS";
}
else if (estados == "3")
{
    ViewBag.titulo = "SOLICITUDES CURSADAS";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                <div class="panel-title">
                    <h3 class="panel-title"> @ViewBag.titulo </h3>
                </div>
            </div>
                <div class="panel-body">
                    <table id="ListOpeRep" class="table table-striped table-bordered" cellspacing="0" style="width:100%">
                        <thead>
                            <tr>
                                <th>Programa</th>
                                <th>Fecha Curse</th>
                                <th>Rut Empresa</th>
                                <th>Razón Social</th>
                                <th>Numero IFI</th>
                                <th>Ejecutivo</th>
                                <th>Oficina</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                    </table>

            </div>
        </div>
    </div>
</div>

